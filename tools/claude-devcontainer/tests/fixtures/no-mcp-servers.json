{
  "name": "Project without MCP Servers",
  "image": "claude-base:latest",
  "mounts": [
    "source=${localEnv:HOME}/.claude,target=/home/claude-user/.claude,type=bind"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code"
      ]
    }
  },
  "forwardPorts": [8080, 9000],
  "remoteEnv": {
    "CUSTOM_VAR": "value"
  }
}