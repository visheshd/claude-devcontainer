{
  "name": "Modern Claude Project",
  "image": "claude-base:latest",
  "mounts": [
    "source=${localEnv:HOME}/.claude,target=/home/claude-user/.claude,type=bind",
    "source=${localEnv:HOME}/custom-data,target=/workspace/data,type=bind"
  ],
  "features": {
    "ghcr.io/visheshd/claude-devcontainer/claude-mcp:1": {
      "servers": "serena,context7"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "ms-python.python",
        "ms-vscode.vscode-json"
      ]
    }
  },
  "forwardPorts": [3000],
  "postCreateCommand": "npm install"
}