# Environment Variables for Python ML Services Stack
# Copy to .env and customize as needed

# Database Configuration
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:postgres@vectordb:5432/mldb

# Redis Configuration
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# Python/ML Configuration
PYTHONPATH=/workspace
JUPYTER_ENABLE_LAB=yes

# API Keys (Required for AI/ML features)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Hugging Face
HUGGINGFACE_API_KEY=your_hf_api_key_here

# Optional: Weights & Biases
WANDB_API_KEY=your_wandb_api_key_here

# Optional: MLflow Tracking
MLFLOW_TRACKING_URI=http://localhost:5000

# Model Configuration
MODEL_PATH=/models
MODEL_CACHE_DIR=/workspace/.model_cache

# Optional: Custom database credentials (requires docker-compose.yml changes)
# POSTGRES_USER=mluser
# POSTGRES_PASSWORD=mlpassword
# POSTGRES_DB=mymldb

# Development Configuration
DEBUG=true
LOG_LEVEL=INFO